---
import BlogHeader from '../components/BlogHeader.astro';
import BaseHead from '../components/BaseHead.astro';

// TODO
const title = '/dev/nur - blog';
const description = 'The perfect blog.';
const permalink = `https://${import.meta.env.VERCEL_URL}`;
---

<html lang='en'>
  <head>
    <style lang='scss'>
      body.astro-css-priority-is-messed-up {
        .title-wrapper {
          z-index: 2;

          width: 100%;
          height: 100%;
          border-top-left-radius: 3rem;
          border-top-right-radius: 3rem;

          background-color: var(--theme-background-color);

          margin-top: 4rem;
          padding-top: 4rem;

          display: flex;
          justify-content: center;

          h2.title {
            font-family: var(--font-body);
            font-size: 2rem;
          }
        }
      }
    </style>
    <BaseHead {title} {description} {permalink} />
  </head>
  <body class='astro-css-priority-is-messed-up'>
    <BlogHeader showSubheader={false} />
    <div class='title-wrapper'>
      <h2 class='title'>Be the one who cares.</h2>
    </div>
  </body>
</html>
