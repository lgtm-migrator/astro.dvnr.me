---
export interface Props {
  showSubheader?: boolean;
}
const { showSubheader } = Astro.props;
---

<header>
  <article>
    <h1>
      <a href='/'> /dev/nur</a>
    </h1>
    {typeof showSubheader === 'undefined' || showSubheader ? (
      <p>
        inspirations by <a href="/about">Nurseiit A.</a>
      </p>
    ) : null}
  </article>
  <div>
    <a class='navlink' href='/posts'>
      <strong>blog</strong>
    </a>
    <a class='navlink' href='/about'>
      <strong>about</strong>
    </a>
  </div>
</header>

<style lang='scss'>
  header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: -1;
    display: flex;
    align-items: center;
    justify-content: space-between;

    padding: 1rem;
    padding-bottom: 4rem;
    margin-bottom: -3rem;

    background-color: var(--theme-behind-color);
  }

  article {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
  }

  h1 {
    margin: 0;
    padding-left: 0;
    max-width: 100%;
    display: flex;
    flex-grow: 1;
  }

  h1 pre {
    padding: 0;
  }

  a {
    color: var(--theme-heading-color);
    font-family: var(--font-mono);
    text-decoration: none;
    display: inline-flex;

    &:hover {
      color: var(--theme-hovered-links-header);
      text-decoration: underline;
    }

    &.navlink {
      padding-left: 1rem;
    }
  }

  p {
    font-size: large;
  }
</style>
